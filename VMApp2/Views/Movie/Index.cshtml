@model IEnumerable<VMApp2.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<a href="/Movie/New" class="btn btn-primary">New Movie</a>

<br>
<br>

<table class="table table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Genre</th>
    </tr>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Edit", "Movie", new { id = item.Id }, null)</td>
                <td>@item.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>

