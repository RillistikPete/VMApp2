@model IEnumerable<VMApp2.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<a href="/Movie/New" class="btn btn-primary">New Movie</a>

<br>
<br>

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Number In Stock</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @*@foreach(var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Edit", "Movie", new { id = item.Id }, null)</td>
                <td>@item.Genre.Name</td>
            </tr>
        }*@
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var dataTbl = $("#movies").dataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, row) {
                            return "<a href='/movie/edit/" + row.id + "'>" + row.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "numberInStock"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });
            //second argument of .on() funtion is a filter - js.delete - so that you dont use a lot
            //of memory by doing a handler on each row, rather once on the table
            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                dataTbl.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}

